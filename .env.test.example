# E2E 테스트용 환경 변수
# 로컬 테스트: .env.test 파일에 실제 값 입력
# CI/CD: 환경 변수로 주입

# 테스트 데이터베이스 (실제 개발 DB와 별도로 사용)
# 옵션 1: 로컬 MySQL 사용
# DATABASE_URL="mysql://root:password@localhost:3306/family_planner_test"
# 옵션 2: Railway 별도 테스트 DB 사용
DATABASE_URL="mysql://root:password@host:port/family_planner_test"

# JWT 설정 (테스트용 간단한 시크릿)
JWT_ACCESS_SECRET="test-access-secret-key"
JWT_REFRESH_SECRET="test-refresh-secret-key"
JWT_ACCESS_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# 이메일 설정 (테스트에서는 실제 발송하지 않음)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="test@example.com"
SMTP_PASSWORD="test-password"
SMTP_FROM="Test <test@example.com>"

# 애플리케이션 설정
NODE_ENV="test"
FRONTEND_URL="http://localhost:3001"

# OAuth 설정 (테스트용 더미 값)
GOOGLE_CLIENT_ID="test-google-client-id"
GOOGLE_CLIENT_SECRET="test-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3000/auth/google/callback"

KAKAO_CLIENT_ID="test-kakao-client-id"
KAKAO_CLIENT_SECRET=""
KAKAO_CALLBACK_URL="http://localhost:3000/auth/kakao/callback"

# 로그 설정
LOG_LEVEL="error"

# Axiom/Sentry (테스트에서는 비활성화)
AXIOM_TOKEN=""
AXIOM_DATASET=""
SENTRY_DSN=""
SENTRY_TRACES_SAMPLE_RATE="0"

# R2 스토리지 (테스트용 더미 값)
R2_ACCOUNT_ID="test-account-id"
R2_ACCESS_KEY_ID="test-access-key"
R2_SECRET_ACCESS_KEY="test-secret-key"
R2_BUCKET_NAME="test-bucket"
R2_PUBLIC_URL="http://localhost:3000/test-storage"
